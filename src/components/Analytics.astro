---
const googleCode = import.meta.env.GOOGLE_ANALYTICS;
const googleSource = `https://www.googletagmanager.com/gtag/js?id=${googleCode}`;
---
{import.meta.env.PROD && (
<>
<script is:inline async src={googleSource}></script>
<script is:inline define:vars={{ googleCode }}>
    window.dataLayer = window.dataLayer || [];
    function gtag() {
        dataLayer.push(arguments);
    }
    gtag("js", new Date());

    gtag("config", googleCode);
</script>
</>
)
}